---
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout title="::BXS::" description="BXS Website" currentPath="/">
  <!-- Hero Section - Centered Layout -->
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-80px)] px-4">
    <div class="flex flex-col items-start">
      <!-- Logo and Title Row -->
      <div class="flex items-center space-x-6 mb-6">
        <!-- Logo -->
        <div>
          <img src="/logo.svg" alt="BXS Logo" class="w-24 h-24 md:w-32 md:h-32" onerror="this.src='/favicon.svg'" />
        </div>
        
        <!-- Main Title -->
        <div class="text-4xl md:text-6xl font-bold text-gray-800 dark:text-white">BXS</div>
      </div>
      
      <!-- Subtitle -->
      <div class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-4 text-left">We are the BXS team!</div>
      
      <!-- Description -->
      <div class="text-base md:text-lg text-gray-600 dark:text-gray-300 mb-2 text-left max-w-md">emm，你知道的，我不知道写啥东西好</div>
      <div class="text-base md:text-lg text-gray-600 dark:text-gray-300 mb-8 text-left max-w-md">算了算了，就这样先占着再说吧</div>
      
      <!-- Kabo Image -->
      <div class="mt-8">
        <img src="/kabo.png" alt="先在这里放一只kabo" class="w-80 h-40 md:w-96 md:h-48 object-contain" onerror="this.src='/favicon.svg'" />
      </div>
    </div>
  </div>
</MainLayout>
